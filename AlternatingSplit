package LinkedList;

/**
 *
 * @author Vishal
 */
public class AlternatingSplit 
{
    public static void main(String args[])
    {
        Node current = Node.createList1();
        
        Node head = current;
//        Node alt = new Node(0);
        // alternate split
        //for length less than 3
        if(head.length(head) == 1)
        {
            System.err.print("Not possible");
        }
        if(head.length(head)==2)
        {
            Node split = new Node(head.next.data);
            head.next = null;
            System.exit(0);
        }
        
        // for length equal to or greater than 3
        Node previous=head;
        head = head.next.next;
        Node alt = new Node(10000);
        
        while(head!=null)
        {
            if(head.next == null)
            {
                Node y = new Node (previous.next.data);
                y.next = alt;
                alt = y;
                
                previous.next = head;
                break;
            }
            else if(head.next.next == null)
            {
                Node x = new Node(head.next.data);
                x.next = alt;
                alt = x;
            }
            else
            {
                Node y = new Node (previous.next.data);
                y.next = alt;
                alt = y;
                
                previous.next = head;
            }
            previous = head;
            head = head.next.next;
        }
        alt.print(alt);
        
        System.out.println();
        head.print(current);
    }
}
